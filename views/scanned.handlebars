<div class="row">
    <div class="col s12 l3">
        <img id="scanned-barcode" data-id="{{barcode.barcode_num}}" />
        <p>Title: {{barcode.title}}</p>
        <p>Description: {{barcode.description}}</p>
        {{#if barcode.photo_url}}<img src="{{barcode.photo_url}}" alt="Photo" width=200><br>{{/if}}
    </div>
    <div style="padding: 0" class="col s12 l8">
        <ul class="tabs s12">
            <li class="tab col s3"><a id="tab" href="#assigned">Assigned</a></li>
            <li class="tab col s3"><a id="tab" href="#unassigned">Unassigned</a></li>
            <li class="tab col s2"><button id="update" class="btn" href="#unassigned">Update</button></li>
        </ul>
        <div id="assigned" class="col s12 l8">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Description</th>
                        <th>Photo</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each items}}
                    {{#if BarcodeId}}
                    <tr>
                        <td>
                            <form>
                                <p>
                                    <label>
                                        <input class="checkbox assigned filled-in" type="checkbox" data-changed="false" checked="checked" data-id="{{id}}"/>
                                        <span class="assignedItem">{{item_name}}</span>
                                    </label>
                                </p>
                            </form>
                        </td>
                        <td>{{description}}</td>
                        <td>{{#if photo_url}}<a href="{{photo_url}}" target="_blank">View Photo</a>{{/if}}</td>
                    </tr>
                    {{/if}}
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div id="unassigned" class="col s12 l8 blue lighten-2">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Description</th>
                        <th>Photo</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each items}}
                    {{#unless BarcodeId}}
                    <tr>
                        <td>
                            <form>
                                <p>
                                    <label>
                                        <input class="checkbox unassigned filled-in" data-changed="false" type="checkbox" data-id="{{id}}"/>
                                        <span class="unassignedItem">{{item_name}}</span>
                                    </label>
                                </p>
                            </form>
                        </td>
                        <td>{{description}}</td>
                        <td>{{#if photo_url}}<a href="{{photo_url}}" target="_blank">View Photo</a>{{/if}}</td>
                    </tr>
                    {{/unless}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    #scanned-barcode {
        width: 150px;
    }

    #assigned,
    #unassigned {
        height: 500px;
    }

    #tab {
        color: black;
    }

    .assignedItem, .unassignedItem {
        color: black;
    }

    #update {
        
    }

    .assigned[type="checkbox"].filled-in:checked + span:not(.lever):after {
        border: 2px solid black;  
        background-color: blue;
    }

    .unassigned[type="checkbox"].filled-in:checked + span:not(.lever):after {
        border: 2px solid white;  
        background-color: blue;
    }


</style>

<script src="/javascript/JsBarcode.all.min.js"></script>
<script src="/javascript/scanned.js"></script>